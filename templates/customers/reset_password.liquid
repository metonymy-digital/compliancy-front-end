<!-- /templates/customers/reset_password.liquid -->

<div class="grid">
  <div class="grid__item large--one-third push--large--one-third text-center">

    <div class="form-vertical">
      {% form 'reset_customer_password' %}
        <img class="icon--ops" src="{{ 'pineapple-black.svg' | asset_url }}" />
        <h2>{{ 'customer.reset_password.subtext' | t: email: email }}</h2>
        <div class="hr"></div>
        
        <h1>reset password</h1>

        {{ form.errors | default_errors }}

        <label for="ResetPassword">{{ 'customer.reset_password.password' | t }}</label>
        <input type="password" value="" name="customer[password]" id="ResetPassword" class="input-full{% if form.errors contains 'password' %} error{% endif %}">

        <label for="PasswordConfirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
        <input type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="input-full{% if form.errors contains 'password_confirmation' %} error{% endif %}">

        <div class="text-center">
          <input type="submit" class="btn btn--full" value="reset password">
        </div>

      {% endform %}
    </div>

  </div>
</div>
