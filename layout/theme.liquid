<head>

  <!-- Basic page needs ================================================== -->
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <link href="{{ 'favicon.ico' | asset_url }}" rel="icon" type="image/x-icon" />

  {% comment %}
    hide favicon until we build customizable theme
  <link rel="shortcut icon" href="{{ 'favicon.png' | asset_url }}" type="image/png" />
  {% endcomment %}

  <!-- Title and description ================================================== -->
  <title>
    {{ page_title }}{% if current_tags %}{% assign meta_tags = current_tags | join: ', ' %} &ndash; {{ 'general.meta.tags' | t: tags: meta_tags }}{% endif %}{% if current_page != 1 %} &ndash; {{ 'general.meta.page' | t: page: current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}
  </title>

  {% if page_description %}
  <meta name="description" content="{{ page_description | escape }}">
  {% endif %}

  <!-- Helpers ================================================== -->
  {% include 'social-meta-tags' %}
  <link rel="canonical" href="{{ canonical_url }}">
  <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
  <meta name="theme-color" content="{{ settings.color_primary }}">

  <!-- CSS ================================================== -->
  {{ 'timber.scss.css' | asset_url | stylesheet_tag }}

  <!-- jerry's compiled css -->
  {{ 'site.css' | asset_url | stylesheet_tag }}


  <!-- Header hook for plugins ================================================== -->
  {{ content_for_header }}
{%- include 'bold-common' -%}

{%- include 'bold-product' with product, hide_action: 'header' -%}

{%- include 'bold-ro-init' -%}
  {% comment %}

  don't use bold default style for now
  {{ 'bold.css' | asset_url | stylesheet_tag }}

  {% endcomment %}

  {{ 'bold-helper-functions.js' | asset_url | script_tag }}

  {% include 'oldIE-js' %}

  {{ '//ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js' | script_tag }}
  {{ 'modernizr.min.js' | asset_url | script_tag }}

  {% comment %}
  If you store has customer accounts disabled, you can remove the following JS file
  {% endcomment %}
  {% if template contains 'customers' %}
  {{ 'shopify_common.js' | shopify_asset_url | script_tag }}
  {% endif %}
  {{ 'product-reviews-override.css' | asset_url | stylesheet_tag }}
</head>

{% comment %}
Add the page template as a class for easy page or template specific styling.
{% endcomment %}
<body id="{{ page_title | handle }}" class="{% if customer %}customer-logged-in {% endif %}template-{{ template | replace: '.', ' ' | truncatewords: 1, '' | handle }}" >

  <div id="NavDrawer" class="drawer drawer--left">
    <div class="drawer__header">
      <div class="drawer__close js-drawer-close">
        <button type="button" class="icon-fallback-text">
          <span class="icon icon-x" aria-hidden="true"></span>
          <span class="fallback-text">{{ 'layout.drawers.close_menu' | t }}</span>
        </button>
      </div>
    </div>
    <!-- begin mobile-nav -->
    <ul class="mobile-nav">
      {% for link in linklists.main-menu.links %}
      <li class="mobile-nav__item{% if link.active %} mobile-nav__item--active{% endif %}">
        <a href="{{ link.url }}" class="mobile-nav__link">{{ link.title }}</a>
      </li>
      {% endfor %}
      {% if shop.customer_accounts_enabled %}
      {% if customer %}
      <li class="mobile-nav__item">
        <a href="/account">{{ 'layout.customer.account' | t }}</a>
      </li>
      <li class="mobile-nav__item">
        {{ 'layout.customer.log_out' | t | customer_logout_link }}
      </li>
      {% else %}
      <li class="mobile-nav__item">
        {{ 'layout.customer.log_in' | t | customer_login_link }}
      </li>
      <li class="mobile-nav__item">
        {{ 'layout.customer.create_account' | t | customer_register_link }}
      </li>
      {% endif %}
      {% endif %}
    </ul>
    <!-- //mobile-nav -->
  </div>
  {% if settings.ajax_cart_method == "drawer" %}
  <div id="CartDrawer" class="drawer drawer--right">
    <div class="drawer__header">
      <div class="drawer__close js-drawer-close">
        <button type="button" class="icon-fallback-text">
          <span class="icon icon-x" aria-hidden="true"></span>
          <span class="fallback-text">{{ 'cart.general.close_cart' | t | json }}</span>
        </button>
      </div>
    </div>
    <div id="CartContainer"></div>
  </div>
  {% endif %}
  <div id="PageContainer">
    <nav class="nav-bar" role="navigation" id="nav">
      <div class="wrapper nav-wrapper">
        <div class="medium-down--hide">
          <!-- begin site-nav -->
          <a href="/" class="hero__logo">
            <img src="{{ 'pineapple.svg' | asset_url }}" alt="pineapple" class="icon icon--pineapple" />
            <img src="{{ 'site-logo.png' | asset_url }}" alt="dean brothers" class="icon--logo" />
          </a>
          <ul class="site-nav" id="AccessibleNav">
            {% for link in linklists.main-menu.links %}
            <li {% if link.active %}class="site-nav--active"{% endif %}>
              <a href="{{ link.url }}" class="site-nav__link">{{ link.title }}</a>
            </li>
            {% endfor %}
            {% if shop.customer_accounts_enabled %}
            {% if customer %}
            <li {% if link.active %}class="site-nav--active"{% endif %}>
              <a href="/account" class="site-nav__link">{{ 'layout.customer.account' | t }}</a>
            </li>
            <li {% if link.active %}class="site-nav--active"{% endif %} >
              <a href="/account/logout" class="site-nav__link">{{ 'layout.customer.log_out' | t }}</a>
            </li>
            {% else %}
            <li {% if link.active %}class="site-nav--active"{% endif %}>
              <a href="/account/login" class="site-nav__link">
                {{ 'layout.customer.log_in' | t }}
              </a>
            </li>
            <li {% if link.active %}class="site-nav--active"{% endif %}>
              <a href="/account/register" class="site-nav__link">
                {{ 'layout.customer.create_account' | t }}
              </a>
            </li>
            {% endif %}
            {% endif %}
            <li>
              <a href="/cart" class="site-header__cart-toggle js-drawer-open-right" aria-controls="CartDrawer" aria-expanded="false">
                <span class="icon icon-cart" aria-hidden="true"></span>
                <span id="CartCount">{{ cart.item_count }}</span>
              </a>
            </li>
          </ul>
          <!-- //site-nav -->
        </div>
        <div class="large--hide medium-down--show">
          <div class="grid">
            <div class="grid__item one-third">
              <div class="site-nav--mobile">
                <button type="button" class="icon-fallback-text site-nav__link js-drawer-open-left" aria-controls="NavDrawer" aria-expanded="false">
                  <span class="icon icon-hamburger" aria-hidden="true"></span>
                  <span class="fallback-text">{{ 'layout.navigation.menu' | t }}</span>
                </button>
              </div>
            </div>
            <div class="grid__item one-third">
              <div class="site-nav--mobile">
                <a href="/" class="hero__logo">
                   <img src="{{ 'site-logo.png' | asset_url }}" alt="dean brothers" class="mobile--1--logo" />
                </a>
              </div>
            </div>
            <div class="grid__item one-third text-right">
              <div class="site-nav--mobile">
                <a href="/cart" class="js-drawer-open-right site-nav__link" aria-controls="CartDrawer" aria-expanded="false">
                  <span class="icon-fallback-text">
                    <span class="icon icon-cart" aria-hidden="true"></span>
                    <span class="fallback-text">{{ 'layout.cart.title' | t }}</span>
                  </span>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <main class="wrapper main-content" role="main">

      {{ content_for_layout }}

    </main>

    <!-- begin site-footer -->
    <footer class="site-footer small--text-center" role="contentinfo">
      <div class="wrapper">
        <div class="grid">
          <div class="grid__item one-whole large--one-third">
            <ul class="footer-nav">
              <li class="footer-nav__item">
                <a href="/">Home</a>
              </li>
              {% for link in linklists.main-menu.links %}
              <li class="footer-nav__item">
                <a href="{{ link.url }}">{{ link.title }}</a>
                </li>
              {% endfor %}
              <li class="footer-nav__item">
               <a href="/pages/faq">FAQ</a>
             </li>
              <li class="footer-nav__item">
                <a href="mailto:help@deenbrotherswine.com">contact us</a>
              </li>
              {% if shop.customer_accounts_enabled %}
              {% if customer %}
              <li class="footer-nav__item">
                <a href="/account">{{ 'layout.customer.account' | t }}</a>
              </li>
              <li class="footer-nav__item">
                {{ 'layout.customer.log_out' | t | customer_logout_link }}
              </li>
              {% else %}
              <li class="footer-nav__item">
                {{ 'layout.customer.log_in' | t | customer_login_link }}
              </li>
              <li class="footer-nav__item">
                {{ 'layout.customer.create_account' | t | customer_register_link }}
              </li>


              {% endif %}
              {% endif %}

            </ul>
          </div>

          <div class="grid__item one-whole large--one-third push--large--one-third">
            <div class="footer-contact">
              <h4>Contact</h4>
              <p>{{ shop.address.street }}</p>
              <p>{{ shop.address.city }}, {{ shop.address.province_code }} {{ shop.address.zip }}</p>
              <p>1(844)480-9576</p>
            </div>
            {% include 'footer-newsletter' %}
          </div>
          <div class="grid__item one-whole">
            <p class="copyright"> &copy; Copyright {{ 'now' | date: "%Y" }} <span class="uppercase">Deen Brothers, LLC.</span> All Rights Reserved.</p>
          </div>
          <div class="grid__item one-whole legal">
            <a href="/pages/terms-and-conditions">terms and conditions</a>
            <a href="/pages/privacy-policy">privacy policy</a>
            <a href="/pages/return-policy">return policy</a>
          </div>
        </div>
      </div>
    </footer>
    <!-- //site-footer -->
  </div>

  {{ 'fastclick.min.js' | asset_url | script_tag }}
  {{ 'timber.js' | asset_url | script_tag }}

  {% comment %}
  Template-specific js
  {% endcomment %}
  <script>
  {% if resetPassword %}
  $(function() {
    timber.resetPasswordSuccess();
  });
  {% endif %}
  </script>


