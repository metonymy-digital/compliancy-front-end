.template-customers-account,
.template-customers-addresses {
  padding-top: 80px; }
  .template-customers-account .main-content,
  .template-customers-addresses .main-content {
    padding: 64px 0; }
  .template-customers-account .account-nav,
  .template-customers-addresses .account-nav {
    border: 1px solid #666;
    padding: 16px 32px; }

.template-customers-register,
.template-customers-login {
  padding-top: 80px; }
  .template-customers-register .main-content,
  .template-customers-login .main-content {
    padding: 64px 0; }
  .template-customers-register .form-vertical h1,
  .template-customers-login .form-vertical h1 {
    margin: 32px 0;
    font-size: 40px; }
  .template-customers-register .form-vertical h2,
  .template-customers-login .form-vertical h2 {
    margin: 16px 0;
    font-family: 'Whitenights';
    font-size: 20px; }
  .template-customers-register .form-vertical hr,
  .template-customers-login .form-vertical hr {
    margin-top: 0; }
  .template-customers-register .form-vertical label,
  .template-customers-login .form-vertical label {
    float: left;
    font-family: 'Whitenights';
    text-transform: lowercase; }
  .template-customers-register .form-vertical a,
  .template-customers-login .form-vertical a {
    font-family: 'Whitenights'; }
  .template-customers-register .form-vertical .link--forgot-password,
  .template-customers-login .form-vertical .link--forgot-password {
    float: right;
    text-decoration: underline; }
  .template-customers-register .form-vertical .input-full,
  .template-customers-login .form-vertical .input-full {
    margin-top: 4px;
    margin-bottom: 32px; }
  .template-customers-register .form-vertical .btn--full,
  .template-customers-login .form-vertical .btn--full {
    color: #ffffff;
    background-color: #8b683e;
    text-transform: uppercase;
    margin: 32px 0;
    height: 48px;
    font-family: 'Avenir-Black';
    letter-spacing: 0.2em;
    font-size: 16px; }
  .template-customers-register .form-vertical .link--form-nav,
  .template-customers-login .form-vertical .link--form-nav {
    text-decoration: underline; }
