////////////////
//TYPEOGRAPHY//
//////////////

p {
  margin: 0;
}
.wrapper {
  max-width: 1440px;
  margin: 0 auto;
}

h1, h2, h3, h4, h5, h6, p {
  margin: 0;
}



h1 {
  font-family: "whitenights-Titling";
  font-size: 29px;
  font-weight: bold;
  letter-spacing: 0.17em;
}

h2 {
  font-family: "Whitenights-Bold";
  font-size: 48px;
  letter-spacing: -0.05em;
  margin: 0;
}

h3 {
  font-family: "freight-display-pro",serif;
  font-size: 33px;
  letter-spacing: 0.03em;
  font-weight: 400;
}

h4 {
  font-family: "freight-display-pro",serif;
  font-size: 24px;
  letter-spacing: 0.01em;
  font-weight: 700;
}

h5 {
  font-family: "freight-display-pro",serif;
  font-size: 28px;
  letter-spacing: 0.01em;
  color: $brown;
  font-weight: 400;
}

h6 {
  font-family: "Whitenights";
  font-size: 24px;
  letter-spacing: 0.07em;
  text-transform: uppercase;
  font-weight: 400;
}

p {
  font-family: "freight-display-pro";
  font-size: 20px;
  letter-spacing: -0.01em;
  line-height: 1.2;
  font-weight: 400;
}

.product__type {
  font-family: "Avenir";
  font-size: 13px;
  letter-spacing: 0.25em;
  text-transform: uppercase;
  color: $brown
}

.product__location {
  font-family: "freight-display-pro";
  font-weight: 400;
  font-style: italic;
  font-size: 20px;
  letter-spacing: 0.01em;
}

.product__price {
  font-family: "Freight Bold";
  font-size: 18px;
  letter-spacing: 0.01em;
}


////////////////////
//BUTTONS AND ICONS
///////////////////

.btn__cta {
  border: 1px solid #fff;
  font-family: "Whitenights";
  font-size: 20px;
  text-transform: uppercase;
  letter-spacing: 0.23em;
  border-radius: 5px;
  padding: 10px 25px 5px;
}

.btn__subscribe, .btn__buy {
  font-family: "Avenir";
  font-size: 12px;
  letter-spacing: 0.31em;
  text-transform: uppercase;
  border-radius: 5px;
  width: 100%;
  padding: 10px 0 7px;
  margin-bottom: 15px;
  max-width: 180px;
}

.btn__subscribe a, .btn__buy a {
  color: $white;
}

.btn__subscribe {
  color: $grey;
  border: 1px solid $grey;
  margin-top: 20px;
}

.btn__buy {
  background-color: $brown;
  color: $white;
}

.icon {
  width: 32px;
  font-size: 32px;
  color: $white;
}
.icon--pineapple {
  width: 25px;
  margin-right: 20px
}

.icon--fleur {
  width: 70px;
  margin-top: -40px
}

.icon--leaves {
  width: 40px;
  height: 100%;
  margin: 0 5px;
}

.icon--separator-lg {
  width: 225px;
}

.icon--separator-sm {
  width: 150px;
  margin: 15px 0;
}

.icon--leaf {
  width: 60px;
  margin-bottom: 15px;
}

.icon--map {
  width: 80px;
}

.icon--somm {
  width: 95px;
}

.icon--basket {
  width: 85px;
}

.brace {
  font-size: 50px;
  line-height: 1;
  margin: 0 5px;
  font-family: 'Whitenights';
}

///////////
//CONTENT
//////////

.hero {
    background-size: cover;
    color: $white;
}

.hero .btn__cta {
  color: $white;
}

.hero__logo {
  color: white;
  display: flex;
  align-items: flex-end;
  line-height: 1;
  padding: 15px 0;
  text-transform: uppercase;
}

.hero--top {
  background-image: url({{ 'hero.jpg' | asset_url }});
  padding-right: 40px;
  -webkit-clip-path: polygon(0 0, 100% 0, 100% 90%, 0 100%);
  clip-path: polygon(0 0, 100% 0, 100% 90%, 0 100%);
  margin-bottom: 45px;
}

.hero--top .hero__cta {
  margin-top: 225px;
  margin-bottom: 200px;
  display: flex;
  flex-flow: column;
  align-items: flex-end;
}

.hero--top .hero__cta p {
  max-width: 550px;
  text-align: right;
  margin-bottom: 65px;
}

.hero--middle {
  background-image: url({{ 'hero-2.jpg' | asset_url }});
}

.hero--bottom {
  background-image: url({{ 'hero-3.jpg' | asset_url }});
  margin-bottom: 0;
}

.value-prop .btn__cta {
  color: $brown;
  border-color: $brown;
}


.value-prop {
  padding: 0 120px 0 120px;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 80px;
}

.value-prop__content {
  display: flex;
  flex-flow: column;
  align-items: flex-end;
}

.value-prop__content h2 {
  font-size: 42px;
  line-height: 1.6;
}

.value-prop__content p {
  max-width: 650px;
  text-align: right;
  margin-bottom: 50px;
  line-height: 1.3;
  color: $brown;
}

.featured-wines {
  padding: 0 80px 0 80px;
  margin-bottom: 60px;
}

.featured-wines h3 {
  font-family: "Whitenights-Bold";
  color: #8b683e;
  letter-spacing: -0.03em;
  font-size: 33px;
}

.featured-wines__header {
  position: relative;
  display: flex;
  width: 100%;
  justify-content: space-between;
  margin-bottom: 90px;
  border-image: url({{ 'separator-brown.svg' | asset_url }}) 0 0 0 0 repeat;
}

.featured-wines__header:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  height: 4px;
  width: 100%;
  border-image: url({{ 'separator-brown.svg' | asset_url }}) 0 0 0 0 fill repeat;
}

.featured-wines__nav {
  margin: 0;
  padding: 0;
}

.featured-wines__nav li {
  list-style: none;
  display: inline-block;
  margin-right: 15px;
  margin-bottom: 0;
}

.featured-wines__nav li:last-of-type {
  margin-right: 0;
}

.featured-wines__nav a {
  font-family: 'Avenir';
  font-weight: 400;
  text-transform: uppercase;
  font-size: 18px;
  // padding-bottom: 2px;
  display: inline-block;
}

.featured-wines__nav a.active {
  border-bottom: 2px solid $brown;
}

.wines {
  display: flex;
}

.product {
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  text-align: center;
  margin-bottom: 45px;
}

.product__image {
  width: 230px;
  margin-bottom: 32px;
}

.hero--cta {
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
  height: 600px;
  margin-bottom: 80px;
}

.hero--cta .icon--fleur {
  margin-bottom: 20px;
}

.hero--cta p {
  max-width: 800px;
  text-align: center;
  margin: 30px 0 50px;
}

.hero--cta .hero__title {
  display: flex;
  justify-content: center;
  align-items: center;
}

.column-container {
  margin-bottom: 80px;
  padding: 0 60px;
}

.column-container .btn__cta {
  color: #8b683e;
  border-color: #8b683e;
}

.value-item {
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
}

.value-item h3 {
  margin-bottom: 65px;
  font-family: 'Whitenights';
  font-size: 40px;
  color: $brown;
  letter-spacing: -0.05em;
}

.value-item .icon {
  margin-bottom: 40px;
}

.value-item__title {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
}

.value-item p {
  text-align: center;
  margin-bottom: 0.5em;
  max-width: 250px;
}

.value-item__cta {
  width: 100%;
  display: flex;
  justify-content: center;
  padding-left: 30px;
  padding-top: 50px;
}

.text-section {
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  margin-bottom: 60px;
}

.text-section h2 {
  margin-bottom: 15px;
}

.text-section p {
  max-width: 800px;
  text-align: center;
  margin-bottom: 30px;
}

.text-section .btn__cta {
  border-color: $grey;
}

@media screen and (max-width: 769px) {
  h2 {
    font-size: 38px;
  }

  h6 {
    font-size: 20px;
  }

  .btn__cta {
    font-size: 16px;
    padding: 10px 15px 5px;
  }

  .icon--leaves {
    height: 60px;
  }

  .value-prop {
    flex-flow: column;
    align-items: center;
    padding: 0 30px 0 60px;

  }

  .value-prop__content {
    align-items: center;
    margin-bottom: 60px;
  }

  .value-prop h2 {
    text-align: center;
    font-size: 36px;
    margin-bottom: 15px;
  }

  .value-prop p {
    text-align: justify;
    margin-bottom: 30px;
    max-width: 600px;
  }

  .hero--top .hero__cta {
    margin-top: 500px;
    margin-bottom: 100px;
    align-items: flex-start;
    padding-left: 30px;
  }

  .hero--top .hero__cta p {
    max-width: 600px;
    text-align: left;
    margin-bottom: 30px;
  }

  .hero--cta {
    padding: 0 30px 0 60px
  }

  .hero--cta p {
    max-width: 600px;
  }

  .hero--cta h2 {
    text-align: center;
  }

  .hero--cta .hero__title {
    align-items: center;
  }

  .hero--cta .icon--fleur {
    width: 60px;
  }

  .text-section {
    padding: 0 30px 0 60px;
  }

  .text-section h2 {
    text-align: center;
  }

  .text-section p {
    max-width: 600px;
  }

  .value-item {
    margin-bottom: 30px;
    max-width: 100%;
  }

  .value-item p {
    max-width: 400px;
  }

  .full-bleed__img {
    display: flex;
    justify-content: center;
    align-items: flex-start;
  }

  .full-bleed__img > img {
    min-width: 1440px;
  }
}




@media screen and (max-width: 480px) {
  h1 {
    font-size: 18px;
  }

  h2 {
    font-size: 32px;
    line-height: 1.2;
  }

  h3 {
    font-size: 24px;
  }

  h4 {
    font-size: 18px;
  }

  h5 {
    font-size: 20px;
  }

  h6 {
    font-size: 18px;
  }

  p {
    font-size: 16px;
  }

  .nav-bar {
    padding: 0 15px;
  }

  .site-nav__link {
    padding: 0 15px;
  }



  .btn__buy, .btn__subscribe {
    max-width: 160px;
  }

  .icon--leaves {
    display: none;
  }

  .brace {
    font-size: 36px;
  }

  .hero--top {
    padding: 0 30px 0 60px;
  }

  .hero--top .hero__cta {
    margin-top: 125px;
    margin-bottom: 100px;
    align-items: center;
  }

  .hero--top .hero__cta h2 {
    text-align: center;
  }

  .hero--top .hero__cta p {
    text-align: center;
    margin-bottom: 20px;
  }

  .value-prop {
    padding: 0 30px 0 60px;
    flex-flow: column;
    align-items: center;
  }

  .value-prop__content {
    align-items: center;
    margin-bottom: 30px;
  }

  .value-prop h2 {
    font-size: 28px;
    line-height: 1.2;
    text-align: center;
    margin-bottom: 15px;
  }

  .value-prop p {
    text-align: center;
    width: 100%;
    margin-bottom: 30px;
    line-height: 1.5;
  }

  .value-prop img {
    display: none;
  }

  .value-item .icon {
    margin-bottom: 30px;
  }

  .hero--cta {
    padding: 0 15px 0 45px;
    position: relative;
    height: calc(100vh);
    margin-bottom: 40px;
  }

  // .hero--cta > h2, button, p {
  //   z-index: 1;
  // }
  //
  // .hero--cta:before {
  //   position: absolute;
  //   content: '';
  //   top: 0;
  //   right: 0;
  //   bottom: 0;
  //   left: 0;
  //   background-color: rgba(0, 0, 0, 0.4);
  // }

  .hero--cta h2 {
    text-align: center;
    margin: 15px 0;
  }

  .hero--cta p {
    margin-bottom: 30px;
  }

  .hero--cta .icon--fleur {
    width: 50px;
  }

  .featured-wines__header {
    margin-bottom: 30px;
    flex-flow: column nowrap;
    align-items: center;
    justify-content: center;
    padding-bottom: 15px;
  }

  .featured-wines__header h3 {
    line-height: 2;
  }

  .product__image {
    width: 160px;
  }

  .product__location {
    font-size: 16px;
  }

  .text-section {
    padding: 0 30px 0 60px;
    margin-bottom: 30px;
  }

  .text-section h2 {
    text-align: center;
    margin-bottom: 15px;
  }

  .text-section p {
    margin-bottom: 30px;
  }

  .column-container {
    padding: 0 30px 0 30px;
    margin-bottom: 50px;
  }

  .value-item {
    margin-bottom: 40px;
  }

  .value-item__title {
    margin-bottom: 5px;
  }

  .full-bleed__img > img {
    min-width: 768px;
  }
}

.product-tabs li {
  display: inline;
  list-style: none;
}

.product-tabs a {
  text-decoration: none;
}

.product-tabs a .active {
  text-decoration: underline;
}
