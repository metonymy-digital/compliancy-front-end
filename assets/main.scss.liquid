$brown: #8b683e;
$grey: #666;
$dark-grey: #333;
$white: #fff;

@font-face {
  font-family: 'Avenir';
  src: url({{ 'Avenir-Black.woff2' | asset_url }}) format('woff2'),
       url({{ 'Avenir-Black.woff' | asset_url }}) format('woff');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'Whitenights';
  src: url({{ 'WhitenightsLTStd-Regular.woff' | asset_url }}) format('woff'),
       url({{ 'Whitenights-LT-Std_48829.woff2' | asset_url }}) format('woff2');
  font-weight: normal;
  font-style: normal;
}


@font-face {
  font-family: 'Whitenights-Titling';
  src: url({{ 'Whitenights-LT-Std-Titling_48828.woff2' | asset_url }}) format('woff2'),
       url({{ 'WhitenightsLTStd-Titling.woff' | asset_url }}) format('woff');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'Whitenights-Bold';
  src: url({{ 'Whitenights-LT-Std-Bold_48825.ttf' | asset_url }}) format('woff');
  font-weight: normal;
  font-style: normal;
}

body {
  color: $dark-grey;
  text-rendering: optimizeLegibility;
}

.site-nav__link {
  color: $white;
  font-family: "Whitenights";
  font-size: 16px;
  letter-spacing: 0.25em;
  padding: 15px 10px 5px;
  text-transform: uppercase;
}

.site-header {
  display: none;
}

.main-content {
  padding-bottom: 0;
}

.medium-down--hide {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.breadcrumb {
  margin-top: 60px;
}
